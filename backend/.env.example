# Application Settings
APP_NAME="AI Concierge Backend"
APP_VERSION="1.0.0"
DEBUG=True

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite:///./concierge.db
# For PostgreSQL (future):
# DATABASE_URL=postgresql://user:password@localhost/concierge_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# AI Engine
AI_ENGINE_ENABLED=True
SUGGESTION_GENERATION_INTERVAL_HOURS=6

# LLM Configuration (Claude/Anthropic)
# Get your API key from https://console.anthropic.com/
# IMPORTANT: Never commit your actual API key! Keep it in .env only
ANTHROPIC_API_KEY=""  # <-- ADD YOUR ANTHROPIC API KEY HERE

# LLM Model Selection (Updated January 2025)
# Options: 
# - claude-opus-4-20250514 (most capable, highest cost)
# - claude-sonnet-4-20250514 (very capable, high cost)
# - claude-3-7-sonnet-20250219 (excellent balance - RECOMMENDED)
# - claude-3-5-haiku-20241022 (fastest, lowest cost)
LLM_MODEL="claude-3-7-sonnet-20250219"

# LLM Parameters
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7
USE_LLM_FOR_SUGGESTIONS=True  # Set to False to use rule-based system only

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
